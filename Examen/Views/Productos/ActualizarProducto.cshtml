@model Examen.Models.viewModels.CActualizarProducto
@{
    ViewBag.Title = "ActualizarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Actualizar Producto</h1>
<br />
<br />
@if (ViewBag.ValorMensaje == 1)
{
    <div class="modal fade" id="miModelo" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modelo">&times;</button>
                    <h3 class="modal-title">Mensaje</h3>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">@ViewBag.MensajeProducto</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
}
@if (ViewBag.ValorMensaje == 0)
{
    <div class="modal fade" id="miModelo" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modelo">&times;</button>
                    <h3 class="modal-title">Mensaje</h3>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">@ViewBag.MensajeProducto</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("ActualizarProducto", "Productos", FormMethod.Post))
{
    <div class="row">
        <form action="ActualizarProducto" method="post">
            <div class="form-group">
                <label for="inputDescription" class="form-label">Descripcion</label>
                <input type="text" class="form-control" id="inputDescription" name="DESC_PRODUCTO" required />
            </div>
            <div class="form-group">
                <label form="inputProduction" class="form-label">Año fabricacion</label>
                <input type="number" value="2023" class="form-control" id="inputProdution" name="AÑO_FABRICACION" required />
            </div>
            <div class="form-group">
                <label for="inputHouse" class="form-label">Casa fabricante</label>
                <select class="form-control" id="inputHouse" name="CASA_FABRICACION">
                    <option value="Médicos en Casa">Médicos en casa</option>
                    <option value="Medicina a tu Alcance">Medicina a tu alcance</option>
                    <option value="Médico Feliz">Médico feliz</option>
                </select>
            </div>
            <div class="form-group">
                <label for="inputState" class="form-label">Estado producto</label>
                <select class="form-control" id="inputState" name="ESTADO_PRODUCTO">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                    <option value="Descontinuado">Descontinuado</option>
                </select>
            </div>
            <div class="form-group">
                <label for="inputTreatment" class="form-label">Área tratamiento</label>
                <select class="form-control" id="inputTreatment" name="AREA_TRATAMIENTO">
                    <option value="Salud General">Salud general</option>
                    <option value="Salud Mental">Salud mental</option>
                    <option value="Estética">Estética</option>
                </select>

            </div>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </form>
   </div>
 }

@section scripts {
   <script type="text/javascript">
      $('#miModelo').modal('show')
   </script> 
} 
